<h1>Listing queries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Product</th>
    <th>Flag</th>
    <th>Bug status</th>
    <th>Outputformat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @queries.each do |query| %>
  <tr>
    <td><%= query.name %></td>
    <td><%= query.description %></td>
    <td><%= query.product %></td>
    <td><%= query.flag %></td>
    <td><%= query.bug_status %></td>
    <td><%= query.outputformat %></td>
    <td><%= link_to 'Show', query %></td>
    <td><%= link_to 'Edit', edit_query_path(query) %></td>
    <td><%= link_to 'Run', run_query_path(query) %></td>
    <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

