<h1>Listing BZ Queries</h1>

<table>

<% @bz_queries.each do |bz_query| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td class="list_description">
      <dl>
        <dt>Name: <%= bz_query.name %></dt>
        <dt>Description: <%= bz_query.description %></dt>
        <dt>Product: <%= bz_query.product %></dt>
        <dt>Flag: <%= bz_query.flag %></dt>
        <dt>Bug status: <%= bz_query.bug_status %></dt>
        <dt>Output format: <%= bz_query.output_format %></dt>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', bz_query %><br/>
      <%= link_to 'Edit', edit_bz_query_path(bz_query) %><br/>
      <%= link_to 'Run', run_bz_query_path(bz_query) %><br/>
      <%= link_to 'Destroy', bz_query, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

