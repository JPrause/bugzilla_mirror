<table>
  <tr>
    <th align="left"><%= sortable "bz_id", "Bz Id" %></th>
    <th align="left"><%= sortable "version" %></th>
    <th align="left"><%= sortable "status" %></th>
    <th align="left"><%= sortable "assigned_to", "Assignee" %></th>
    <th align="left">Summary</th>
  </tr>

<% @issues.each do |issue| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <a href="<%=AppConfig['bugzilla']['bug_display_uri']%><%= issue.bz_id %>"><%= issue.bz_id %></a>
    </td>
    <td><%= issue.version %></td>
    <td><%= issue.status %></td>
    <td><%= issue.assigned_to %></td>
    <td><%= issue.summary %></td>
  </tr>
<% end %>
</table>

