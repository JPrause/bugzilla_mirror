<h1>Issue Actions</h1>

<p>
  <b>Available Versions:</b>          
  <%= available_versions %>
</p>

  
<%= form_tag(errata_reports_path, method: "get") do %>
  <%= label_tag(:q, "List Version:") %>
  <select id="version_selected" multiple="multiple" name="version">
    <option value="All">All</option>
    <option value="cfme-4.0.z">cfme-4.0.z</option>
    <option value="cfme-5.0.z">cfme-5.0.z</option>
    <option value="cfme-5.1.z">cfme-5.1.z</option>
    <option value="cfme-5.2">cfme-5.2</option>
    <option value="cfme-5.2.z">cfme-5.2.z</option>
    <option value="cfme-5.3">cfme-5.3</option>
  </select>
  <%= submit_tag('Run The Errata Report') %>
<% end %>

<br />
<%# To uncomment the below line change %# to %= %>
<%= form_tag(statistics_reports_path, method: "get") do %>
  <%= submit_tag('Run The Statistics Report') %>
<% end %>

<br />
<%= form_tag(update_all_issues_path, method: "get") do %>
  <%= submit_tag('Refresh Issues Database From Bugzilla') %>
<% end %>

<br />

<h1>Issue Table</h1>

<p>
  <b>Last Updated:</b>          
  <%= @issues_updated_at %>    
</p>

<table>
  <tr>
    <th align="left"><%= sortable "bz_id", "Bz Id" %></th>
    <th align="left"><%= sortable "version" %></th>
    <th align="left"><%= sortable "status" %></th>
    <th align="left"><%= sortable "assigned_to", "Assignee" %></th>
    <th align="left">Summary</th>
  </tr>


<% @issues.each do |issue| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= url_to_bugzilla(issue.bz_id) %></td>
    <td><%= issue.version %></td>
    <td><%= issue.status %></td>
    <td><%= issue.assigned_to %></td>
    <td><%= issue.summary %></td>
  </tr>
<% end %>
</table>

<br />

