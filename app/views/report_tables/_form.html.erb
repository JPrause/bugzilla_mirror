<%= form_for(@report_table) do |f| %>
  <% if @report_table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report_table.errors.count, "error") %> prohibited this report_table from being saved:</h2>

      <ul>
      <% @report_table.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Query Output ID (for debugging): " %><br />
    <%= f.text_field :query_id %>
  </div>
  <div class="field">
    <%= f.label :vertical %><br />
    <%= f.text_field :vertical %>
  </div>
  <div class="field">
    <%= f.label :horizontal %><br />
    <%= f.text_field :horizontal %>
  </div>

  <div class="field">
    <%= f.label :query_name %><br />
    <% if @report_table.query_name == 0 %>
      <%= default = "NONE" %>
    <% else %>
      <%= default = @report_table.query_name %>
    <% end %>
    <%= select_tag "report_table[query_name]", 
                     options_for_select(BzQuery.pluck(:name), default) %>
  </div>

  <div class="field">
    <%= f.label "#{@report_table.query_name} occurrence time:" %><br />
    <% if @report_table.query_id == 0 %>
      <%= default = "LATEST" %>
    <% else %>
      <%= default = @report_table.query_id %>
    <% end %>
    <%= select_tag "report_table[query_id]", 
                     options_for_select(get_bz_query_run_times(@report_table.query_name), default) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
