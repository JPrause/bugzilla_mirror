<p id="notice"><%= notice %></p>

<h1>
  BZs in <b>POST</b> state that need ACK(s)</br>
</h1>

<p>
  <table border="1">
    <tr>
      <th>BZ ID</th>
      <th>PM ACK</th> 
      <th>Devel ACK</th> 
      <th>QA ACK</th> 
      <th>Doc ACK</th> 
      <th>Version ACK</th> 
      <th>Summary</th>
    </tr>

    </tr>

    <% @errata_report_need_acks.each do |bz| %>
      <tr class="<%= cycle('tag_line_odd', 'tag_line_even') %>">
        <td>
        <a href="<%=get_bugzilla_uri%><%= bz[:BZ_ID] %>"><%= bz[:BZ_ID] %></a>
        </td>
        <td align="center"> <%= bz[:PM_ACKS] %></td>
        <td align="center"> <%= bz[:DEVEL_ACKS] %></td>
        <td align="center"> <%= bz[:QA_ACKS] %></td>
        <td align="center"> <%= bz[:DOC_ACKS] %></td>
        <td align="center"> <%= bz[:VER_ACKS] %></td>
        <td><%= bz[:SUMMARY] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</p>

<p>
  <b>BZs That Have All ACKs:</b>
  <table>
    <% @errata_report_have_acks.each do |bz| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
        <a href="<%=get_bugzilla_uri%><%= bz[:BZ_ID] %>"><%= bz[:BZ_ID] %></a>
        </td>
        <td><%= bz[:SUMMARY] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</p>

<%= link_to 'Back', issues_path %>
